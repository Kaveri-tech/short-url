<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Short URL</title>
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortener</h1>

    <% if (locals.id) { %>
    <p>
      Short URL Generated:
      <a href="https://localhost:8001/<%= id %>"
        >http://localhost:8001/<%= id %></a
      >
    </p>
    <% } %>

    <form method="post" action="/url">
      <label>Enter Original URL</label>
      <input
        type="text"
        name="url"
        placeholder="https://example.com"
        required
      />
      <button type="submit">Generate</button>
    </form>

    <% if (locals.urls) { %>
    <table border="1">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Short ID</th>
          <th>Redirect URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% urls.forEach((url, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td>
            <a href="https://localhost:8001/<%= url.shortId %>"
              ><%= url.shortId %></a
            >
          </td>
          <td><%= url.redirectURL %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>
  </body>
</html>
